{% load i18n %}{% language "en" %}<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0"
     xmlns:atom="http://www.w3.org/2005/Atom"
     xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd"
     xmlns:media="http://search.yahoo.com/mrss/">
    <channel>
        <title><![CDATA[Curto Circuito Podcast]]></title>
        <atom:link href="http://www.curtocircuito.cc/atom.xml" rel="self" type="application/rss+xml"/>
        <link><![CDATA[http://curtocircuito.cc]]></link>
        <description>
            <![CDATA[Um bate-papo descontraído sobre tecnologia, nerdices e tudo o mais que a curiosidade pedir, no melhor estilo "mesa de bar".]]>
        </description>
        <lastBuildDate>{{ lastBuildDate|date:"r" }}</lastBuildDate>
        <language>pt-br</language>
        <copyright><![CDATA[Attribution-ShareAlike 3.0 (CC BY-SA 3.0)]]></copyright>
        <managingEditor>henrique@bastos.net (Henrique Bastos)</managingEditor>
        <webMaster><![CDATA[henrique@bastos.net (Henrique Bastos)]]></webMaster>

        <itunes:subtitle></itunes:subtitle>
        <itunes:summary>
            <![CDATA[Um bate-papo descontraído sobre tecnologia, nerdices e tudo o mais que a curiosidade pedir, no melhor estilo "mesa de bar".]]>
        </itunes:summary>
        <itunes:keywords></itunes:keywords>
        <itunes:category text="Technology">
            <itunes:category text="Podcasting"/>
        </itunes:category>
        <itunes:category text="Technology"/>
        <itunes:author><![CDATA[Diego Dukão / Henrique Bastos]]></itunes:author>
        <itunes:owner>
            <itunes:name><![CDATA[Diego Dukão / Henrique Bastos]]></itunes:name>
            <itunes:email><![CDATA[henrique@bastos.net]]></itunes:email>
        </itunes:owner>
        <itunes:image href="http://www.curtocircuito.cc/static/core/img/itunes-image.png"/>
        <itunes:explicit><![CDATA[No]]></itunes:explicit>

        {% for item in entries %}
        <item>
            <link><![CDATA[{{ item.full_url }}]]></link>
            <title><![CDATA[{{ item.title }}]]></title>
            <pubDate>{{ item.creation_date|date:"r" }}</pubDate>
            <description><![CDATA[{{ item.excerpt|default:item.html_content|safe }}]]></description>

            <enclosure url="{{ item.audio }}" length="1" type="audio/mpeg"/>
            <guid>{{ item.audio }}</guid>

            <itunes:author><![CDATA[Diego Dukão / Henrique Bastos]]></itunes:author>
            <itunes:summary>
                <![CDATA[{{ item.excerpt|default:item.html_content|safe|striptags }}]]>
            </itunes:summary>
            <itunes:image href="{{ item.full_image_url }}"/>
            <itunes:duration>{{ item.duration|time:"H:i:s" }}</itunes:duration>
            {% if item.tags %}<itunes:keywords>{{ item.tags }}</itunes:keywords>{% endif %}
        </item>
        {% endfor %}

    </channel>
</rss>
{% endlanguage %}
